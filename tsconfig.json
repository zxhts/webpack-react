{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",                              
    "module": "commonjs",     
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,            
    "skipLibCheck": true,
    "jsx": "react" ,
    "allowJs": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noImplicitAny":false,
    "strict": false,
    "sourceMap": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@page/*": ["./src/page/*"]
    },
    "emitDecoratorMetadata": true                       
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
